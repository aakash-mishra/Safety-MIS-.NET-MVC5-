@model IEnumerable<NTPC_SAFETY.Models.Report>

@{
    ViewBag.Title = "Index";
}

<h2>Reports Status</h2>

@Html.ActionLink("Create New Safety Report", "Create","SafetyForms")
<br />
@Html.ActionLink("View all Reports", "Index", "SafetyForms" )<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastSubmitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsThisMonthReport)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastSubmitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsThisMonthReport)
        </td>
        
        <td>
           
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
          
        </td>
    </tr>
}

</table>
